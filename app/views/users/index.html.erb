<div class="row">
    <div class="col-md-8 col-md-offset-2">
    <h1>The Devlink Community</h1>
    <p>Welcome to our community, users must fill out a profile in order to join.</p>
        <ul class="list-unstyled">
            <% @users.each do |u| %>
                <% if u.profile %>
                    <li>
                        <div class="well row <%= cycle('white-bg', '') %>">
                            <div class="col-sm-4 text-center">
                                <% if u.profile.avatar %>
                                    <%= link_to u do %>
                                        <%= image_tag u.profile.avatar.url(:thumb), class: "image-list" %><br/>
                                    <% end %>
                                <% end %>
                            </div>
                            
                            <div>
                                <%= link_to u do %>
                                    <h2><%= u.profile.first_name %> <%= u.profile.last_name %></h2>
                                <% end %>
                                
                                <p>
                                    <%= u.profile.job_title %>
                                    <% if u == current_user %>
                                        <span id="no-text-decoration" class="inline-block label label-warning">Your Profile</span>
                                    <% end %>
                                    
                                    <% if u.plan_id == 6 %>
                                        <span class="label label-danger">Pro</span>
                                    <% end %>
                                </p>
                            </div>
                        </div>
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>